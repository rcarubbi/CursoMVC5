@model AvaliadorGastronomico.Domain.Critica

@{
    ViewBag.Title = "Editar";
}

@section scripts
{
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}

<h2>Editar</h2>


@using (Html.BeginForm()) {
    @* Slide 36 *@
    @Html.ValidationSummary(true)
    @* Slide 58 *@
    @Html.AntiForgeryToken()
    <fieldset>
        <legend>Crítica para @Model.Restaurante.Nome</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Nota)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nota)
            @Html.ValidationMessageFor(model => model.Nota)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Corpo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Corpo)
            @Html.ValidationMessageFor(model => model.Corpo)
        </div>
        @Html.HiddenFor(model => model.DataRefeicao)
        @Html.HiddenFor(model => model.DataCriacao)
        @Html.HiddenFor(model => model.Restaurante_Id)
        @Html.HiddenFor(model => model.Id)

        <p>
            <input type="submit" value="Salvar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>


