@model IEnumerable<AvaliadorGastronomico.Domain.Restaurante>


@{
    ViewBag.Title = "Restaurantes";
}


<h2>Lista de Restaurantes</h2>
@using(Html.BeginForm("Index", "Restaurante", FormMethod.Get))
{
    @Html.DropDownList("uf", new SelectList(ViewBag.Ufs))
    <input type="submit" value="Filtrar" />
} 
<table>
    <tr>
        <th>
            Nome
        </th>
        <th>
            Localização
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Nome, "Detalhes", "Restaurante", new { id = item.Id }, null)
        </td>
        <td>
            @item.Endereco.Cidade - @item.Endereco.UF
        </td>
      
    </tr>
}

</table>
