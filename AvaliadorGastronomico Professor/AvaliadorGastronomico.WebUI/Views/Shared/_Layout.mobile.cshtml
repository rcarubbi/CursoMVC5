<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Avaliador Gastronômico</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <div class="page">
        <div id="header">
            Mobile
            <div id="logindisplay">
                @Html.Partial("_LoginPartial")
            </div>
            <div id="menucontainer">
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Críticas", "Index", "Critica")</li>
                    <li>@Html.ActionLink("Restaurantes", "Index", "Restaurante")</li>
                    <li>@Html.ActionLink("Cozinhas", "Pesquisar", "Cozinha")</li>
                </ul>
            </div>
        </div>

        <div id="main">
            @RenderBody()
            <div id="footer">
                @RenderSection("footer", false)
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @RazorHelpers.Script("jQuery.tmpl.min.js", Url)
    @RazorHelpers.Script("AvaliadorGastronomico.js", Url)
    @RenderSection("scripts", required: false)
</body>
</html>
