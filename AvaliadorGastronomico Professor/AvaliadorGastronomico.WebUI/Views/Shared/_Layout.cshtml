<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Avaliador Gastronômico</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.core.css")"  rel="stylesheet" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.resizable.css")"   rel="stylesheet" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.selectable.css")"   rel="stylesheet" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.accordion.css")"   rel="stylesheet" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.autocomplete.css")"   rel="stylesheet" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.button.css")"   rel="stylesheet" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.dialog.css")"   rel="stylesheet" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.slider.css")"   rel="stylesheet" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.tabs.css")"   rel="stylesheet" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.datepicker.css")"   rel="stylesheet" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.progressbar.css")"   rel="stylesheet" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.theme.css")"   rel="stylesheet" />
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="title">
                <img src="@Url.Content("~/Content/images/logo.jpg")" alt="Avaliador Gastronômico" />
            </div>
            <div id="logindisplay">
                @Html.Partial("_LoginPartial")
            </div>
            <div id="menucontainer">
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Críticas", "Index", "Critica")</li>
                    <li>@Html.ActionLink("Restaurantes", "Index", "Restaurante")</li>
                    <li>@Html.ActionLink("Cozinhas", "Pesquisar", "Cozinha")</li>
                </ul>
            </div>
        </div>

        <div id="main">
            @RenderBody()
            <!-- slide 29 -->
            <div id="footer">
                @RenderSection("footer", false)
            </div>
        </div>
    </div>
     @Scripts.Render("~/bundles/jquery")
  
    @* Slide 45 *@
    @RazorHelpers.Script("jquery-ui-1.8.24.min.js", Url)

    @* Slide 47 *@
    @RazorHelpers.Script("jQuery.tmpl.min.js", Url)

    @* Slide 41 *@
    @RazorHelpers.Script("AvaliadorGastronomico.js", Url)

    @* Slide 25 *@
    @RenderSection("scripts", required: false)
</body>
</html>
